<div class="container">
  <h1>All our chefs</h1>

  <%= form_tag users_path, method: :get do %>
 <%#= text_field_tag :query, params[:query], class: "form-control", placeholder: "Find a chef"%>
  <%= label_tag(:q, "Chef's speciality:") %>
  <% cuisines = ["","Thai", "Italian","French","Mexican", "Indian", "Japanese"] %>
  <%= select_tag "query", options_for_select(cuisines, @query) %>

  <%= label_tag(:q, "for less than:") %>
  <% price = ["", 40, 50, 75, 100] %>
  <%= select_tag "price", options_for_select(price, @price)%>
  <%= label_tag(:q, "â‚¬") %>
  <%= submit_tag "search"%>
  <% end %>
  <%= link_to "See all chefs", users_path, class: "btn btn-primary"%>


  <% if user_signed_in? %>
  <%= link_to "log-out", destroy_user_session_path, method: :delete %>
  <% end %>

  <% @chefs.each do |chef| %>
  <div class="card-trip">

    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg">
    <div class="card-trip-infos">
      <div>
        <h2>$<%= chef.price %></h2>
        <h2><%= chef.name %></h2>

        <h2 class="card-trip-pricing"><%= chef.cuisine %></h2>
        <%= link_to "chef's details", user_path(chef)%>

        <% if @chefs.empty? %>
        <h2> No chefs </h2>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>
